<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/x-icon" href="img/favicon/favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="img/favicon/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="img/favicon/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="img/favicon/favicon-16x16.png" />
  <link rel="manifest" href="img/favicon/site.webmanifest" />
  <title>Instagram</title>
  <link rel="stylesheet" href="output.css" />
  <style>
    @media (prefers-color-scheme: dark) {
      body {
        background-color: #121212;
      }
    }
  </style>
</head>
<body class="bg-black text-gray-300">
  <!-- Main Container -->
  <div class="flex">

    <!-- Left Sidebar Navigation -->
    <aside class="bg-black text-gray-300 h-screen w-16 md:w-64 flex flex-col items-center md:items-start py-4 space-y-6">
      <div class="hidden md:block px-4">
        <span class="text-white text-2xl font-bold">Instagram</span>
      </div>
      <nav class="space-y-6 flex flex-col items-center md:items-start w-full">
        <a href="#" class="flex items-center space-x-4 px-4 py-2 hover:bg-gray-800 rounded-md">
          <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h18M3 12h18m-9 5h9" />
          </svg>
          <span class="hidden md:inline">Home</span>
        </a>
        <a href="#" class="flex items-center space-x-4 px-4 py-2 hover:bg-gray-800 rounded-md">
          <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 10l-5 5-5-5" />
          </svg>
          <span class="hidden md:inline">Search</span>
        </a>
      </nav>
      <button id="create-btn" class="flex items-center space-x-4 px-4 py-2 hover:bg-gray-800 rounded-md">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v14m7-7H5" />
        </svg>
        <span class="hidden md:inline">Create</span>
      </button>
    </aside>

    <!-- Main Content Area -->
    <div class="bg-black text-gray-300 w-full md:w-2/3 mx-auto">
      <!-- Stories Section -->
      <div class="flex overflow-x-auto items-center bg-black p-4">
        <div class="flex flex-col items-center mx-2">
          <img src="https://via.placeholder.com/60" class="rounded-full border-2 border-pink-500" alt="Story">
          <p class="text-sm text-gray-300 mt-2">Your Story</p>
        </div>
        <div class="flex flex-col items-center mx-2">
          <img src="https://via.placeholder.com/60" class="rounded-full border-2 border-pink-500" alt="Story">
          <p class="text-sm text-gray-300 mt-2">User1</p>
        </div>
      </div>

      <!-- Main Feed -->
      <div class="bg-black text-gray-300 w-full md:w-2/3 mx-auto">
        <div class="space-y-6">
          <% posts.forEach(post => { %>
            <div class="bg-gray-900 rounded-md overflow-hidden">
              <!-- Post Header -->
              <div class="flex items-center p-4">
                <img src="https://via.placeholder.com/40" class="rounded-full" alt="User">
                <div class="ml-3">
                  <p class="text-sm font-semibold text-white">User</p>
                  <p class="text-xs text-gray-400">Just now</p>
                </div>
              </div>

              <!-- Post Content -->
              <img src="<%= post.imagePath %>" alt="Post Image" class="w-full max-w-[600px] mx-auto">

              <!-- Post Actions -->
              <div class="p-4">
                <div class="flex space-x-4 mb-2">
                  <button class="text-gray-400 hover:text-red-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
                    </svg>
                  </button>
                  <button class="text-gray-400 hover:text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h16M3 10h16m-7 5h7" />
                    </svg>
                  </button>
                </div>
                <p class="text-sm text-white font-semibold">514,191 likes</p>
                <p class="text-sm text-gray-400">
                  <span class="font-semibold text-white">User</span> <%= post.caption %>
                </p>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>

    <!-- Right Sidebar -->
    <aside class="hidden md:block bg-black text-gray-300 p-4 w-1/4">
      <div class="flex items-center mb-4">
        <img src="https://via.placeholder.com/40" class="rounded-full" alt="User">
        <div class="ml-3">
          <p class="text-sm font-semibold text-white">damnveezy</p>
          <p class="text-xs text-gray-400">Vedant</p>
        </div>
        <button class="ml-auto text-blue-500 text-sm">Switch</button>
      </div>
      <h4 class="text-white font-semibold mb-2">Suggested for you</h4>
      <!-- Suggested User -->
      <div class="flex items-center mb-4">
        <img src="https://via.placeholder.com/40" class="rounded-full" alt="User">
        <div class="ml-3">
          <p class="text-sm font-semibold text-white">aashutosh_mahto</p>
          <p class="text-xs text-gray-400">Followed by damnveezy</p>
        </div>
        <button class="ml-auto text-blue-500 text-sm">Follow</button>
      </div>
    </aside>

  </div>

  <!-- Modal (hidden by default) -->
  <div id="create-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-70 hidden">
    <div class="bg-gray-800 text-white p-6 rounded-lg w-11/12 md:w-2/3 lg:w-1/3">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-bold">Create new post</h2>
        <button id="close-modal" class="text-gray-400 hover:text-white">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <form id="upload-form" action="/upload" method="post" enctype="multipart/form-data">
        <div class="border-2 border-gray-600 p-8 rounded-md text-center">
          <div class="text-gray-400 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10l4-4m0 0l4 4m-4-4v14M21 12h-6m-2-2v14m2-2h-6" />
            </svg>
            Drag photos and videos here
          </div>
          <label for="file-input" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded cursor-pointer">
            Select from computer
          </label>
          <input type="file" id="file-input" name="file" class="hidden" />
          <input type="text" name="caption" class="bg-gray-800 text-white p-2 rounded-md mt-4" placeholder="Write a caption..." />
          <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded mt-4">
            Upload
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.getElementById("create-btn").addEventListener("click", function() {
      document.getElementById("create-modal").classList.remove("hidden");
    });

    document.getElementById("close-modal").addEventListener("click", function() {
      document.getElementById("create-modal").classList.add("hidden");
    });
  </script>
</body>
</html>
